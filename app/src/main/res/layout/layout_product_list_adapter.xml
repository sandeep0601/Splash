<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="1dp"
    android:layout_marginEnd="1dp"
    android:layout_marginTop="1dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/mobile_image"
                android:scaleType="centerInside"
                android:layout_margin="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/worksans_medium"
                    android:foregroundGravity="center|left"
                    android:gravity="center|left"
                    android:text="iPhone 10x pro."
                    android:textColor="@color/black"
                    android:textSize="@dimen/text"/>
                <TextView
                    android:paddingEnd="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/worksans_medium"
                    android:foregroundGravity="center|left"
                    android:gravity="center|left"
                    android:layout_marginTop="4dp"
                    android:text="New product for sell New product for sell New product for sell New product for sell New product for sell New product for sell New product for sell New product for sell New product for sell New product for sell New product for sell New product for sell New product for sell New product for sell New product for sell New product for sell New product for sell New product for sell New product for sell New product for sell "
                    android:textColor="@color/c_gray1"
                    android:lines="2"
                    android:textSize="@dimen/text_small_extra"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/worksans_medium"
                        android:foregroundGravity="center|left"
                        android:gravity="center|left"
                        android:text="$ 9999"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_small"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/worksans_medium"
                        android:foregroundGravity="center|left"
                        android:gravity="center|left"
                        android:text="@string/crossed_price"
                        android:textColor="@color/c_gray1"
                        android:textSize="@dimen/text_small"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"/>



                </LinearLayout>


            </LinearLayout>




        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>