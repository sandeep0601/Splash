<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:black="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            black:layout_constraintBottom_toBottomOf="parent"
            black:layout_constraintTop_toTopOf="parent"
            black:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="15dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_user_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="15dp"
                        android:clickable="true"
                        android:foregroundTint="#143215"
                        android:src="@drawable/user"
                        android:tint="@color/white_color" />

                    <TextView
                        android:id="@+id/txt_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="@font/worksans_medium"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:text="Hello, Username"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_title" />

                    <TextView
                        android:id="@+id/txt_user_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="@font/worksans_medium"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:text="+91 12345679890"
                        android:textColor="@color/c_gray1"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/txt_user_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/worksans_medium"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:text="abc1234@gmail.com"
                        android:textColor="@color/c_gray1"
                        android:textSize="@dimen/text_small" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_order"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_local_offer_24"
                        black:tint="#ff858585"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:drawableTint="@color/black"
                        android:fontFamily="@font/worksans_medium"
                        android:text="My Orders"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_nev" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.1dp"

                    android:layout_marginStart="69dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/c_gray1" />

                <LinearLayout
                    android:id="@+id/layout_Method"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_payment_24"
                        black:tint="#ff858585"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"

                        android:drawableTint="@color/black"
                        android:fontFamily="@font/worksans_medium"
                        android:text="Payment Method"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_nev" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.1dp"

                    android:layout_marginStart="69dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/c_gray1" />

                <LinearLayout
                    android:id="@+id/layout_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_home_24"
                        black:tint="#ff858585"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:drawableTint="@color/black"
                        android:fontFamily="@font/worksans_medium"
                        android:text="My Address"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_nev" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.1dp"

                    android:layout_marginStart="69dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/c_gray1" />

                <LinearLayout
                    android:id="@+id/layout_order_Refund"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_compare_arrows_24"
                        black:tint="#ff858585"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:drawableTint="@color/black"
                        android:fontFamily="@font/worksans_medium"
                        android:text="Account Settings"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_nev" />

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.1dp"

                    android:layout_marginStart="69dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/c_gray1" />


                <LinearLayout
                    android:id="@+id/layout_Aboutus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_language_24"
                        black:tint="#ff858585"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"

                        android:drawableTint="@color/black"
                        android:fontFamily="@font/worksans_medium"
                        android:text="About Us"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_nev" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.1dp"

                    android:layout_marginStart="69dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/c_gray1" />


                <LinearLayout
                    android:id="@+id/layout_help"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_call_24"
                        black:tint="#ff858585"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"

                        android:drawableTint="@color/black"
                        android:fontFamily="@font/worksans_medium"
                        android:text="Help"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_nev" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.1dp"

                    android:layout_marginStart="69dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/c_gray1" />

                <LinearLayout
                    android:id="@+id/layout_logout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_baseline_login_24"
                        black:tint="#ff858585"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"

                        android:drawableTint="@color/black"
                        android:fontFamily="@font/worksans_medium"
                        android:text="Logout"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_nev" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.1dp"

                    android:layout_marginStart="69dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/c_gray1" />


            </LinearLayout>


        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>