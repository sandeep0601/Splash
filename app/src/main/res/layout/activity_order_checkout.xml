<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorwhite">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/txt_10sp"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="Order Checkout"
                        android:textColor="@color/color_DarkText"
                        android:textSize="@dimen/txt_bigXX" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/txt_10sp"
                        android:singleLine="true"
                        android:text="Delivery Address"
                        android:textColor="@color/color_DarkText"
                        android:textSize="@dimen/txt_mediumX" />

                    <View
                        android:layout_width="@dimen/txt_50sp"
                        android:layout_height="@dimen/txt_3sp"
                        android:layout_marginTop="@dimen/txt_10sp"
                        android:background="@color/color_green" />

                    <EditText
                        android:layout_marginTop="@dimen/txt_10sp"
                        android:id="@+id/edt_name"
                        android:paddingLeft="@dimen/txt_10sp"
                        android:gravity="left|center"
                        android:textSize="@dimen/eighten"
                        android:maxLength="10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty"
                        android:background="@drawable/pincodeedittext"
                        android:textColor="@color/colorblack"
                        android:hint="Name"
                        android:inputType="text"/>

                    <EditText
                        android:layout_marginTop="@dimen/txt_10sp"
                        android:id="@+id/edt_number"
                        android:paddingLeft="@dimen/txt_10sp"
                        android:gravity="left|center"
                        android:textSize="@dimen/eighten"
                        android:inputType="number"
                        android:maxLength="10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty"
                        android:background="@drawable/pincodeedittext"
                        android:textColor="@color/colorblack"
                        android:hint="@string/mobileno"/>

                    <EditText
                        android:layout_marginTop="@dimen/txt_10sp"
                        android:id="@+id/edt_p_no"
                        android:paddingLeft="@dimen/txt_10sp"
                        android:gravity="left|center"
                        android:textSize="@dimen/eighten"
                        android:maxLength="10"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty"
                        android:background="@drawable/pincodeedittext"
                        android:textColor="@color/colorblack"
                        android:hint="Plot No"/>
                    <EditText
                        android:layout_marginTop="@dimen/txt_10sp"
                        android:id="@+id/edt_city"
                        android:paddingLeft="@dimen/txt_10sp"
                        android:gravity="left|center"
                        android:textSize="@dimen/eighten"
                        android:inputType="text"
                        android:maxLength="10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty"
                        android:background="@drawable/pincodeedittext"
                        android:textColor="@color/colorblack"
                        android:hint="City" />
                    
                    <EditText
                        android:layout_marginTop="@dimen/txt_10sp"
                        android:id="@+id/edt_state"
                        android:paddingLeft="@dimen/txt_10sp"
                        android:gravity="left|center"
                        android:textSize="@dimen/eighten"
                        android:inputType="text"
                        android:maxLength="10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty"
                        android:background="@drawable/pincodeedittext"
                        android:textColor="@color/colorblack"
                        android:hint="State"/>


                    <EditText
                        android:layout_marginTop="@dimen/txt_10sp"
                        android:id="@+id/et_password"
                        android:paddingLeft="@dimen/txt_10sp"
                        android:gravity="left|center"
                        android:textSize="@dimen/eighten"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/fifty"
                        android:background="@drawable/pincodeedittext"
                        android:textColor="@color/colorblack"
                        android:hint="@string/password" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_check_out"
                        android:layout_width="250dp"
                        android:layout_height="@dimen/txt_50sp"
                        android:background="@drawable/btn_rounded_red"
                        android:text="Checkout"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:textColor="@android:color/white" />





                </LinearLayout>

            </LinearLayout>


        </ScrollView>

    </RelativeLayout>
</layout>