<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.64"
                android:layout_marginBottom="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/worksans_medium"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Welcome back!"
                    android:textColor="@color/c_black"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="8dp"
                    android:padding="4dp"
                    android:layout_marginBottom="25dp"
                    android:fontFamily="@font/worksans_medium"
                    android:gravity="center"
                    android:text="Login to continue."
                    android:textColor="@color/black"
                    android:textSize="@dimen/text" />


                <EditText
                    android:id="@+id/edt_loginID"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20.0dip"
                    android:drawableLeft="@drawable/ic_baseline_call"
                    android:drawablePadding="4dp"
                    android:hint="Enter Phone Number"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:paddingTop="9dp"
                    android:paddingBottom="15dp"
                    android:singleLine="true"
                    android:textColor="@color/c_black"
                    android:textColorHighlight="@color/white_color"
                    android:textColorHint="@color/c_gray2"
                    android:textSize="@dimen/text"
                    android:backgroundTint="@color/c_gray2"
                    android:drawableTint="@color/c_gray2" />

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="20.0dip"
                    android:drawableLeft="@drawable/ic_baseline_lock_open_24"
                    android:drawablePadding="4dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:paddingTop="9dp"
                    android:paddingBottom="15dp"
                    android:singleLine="true"
                    android:textColor="@color/c_black"
                    android:textColorHighlight="@color/white_color"
                    android:textColorHint="@color/c_gray2"
                    android:textSize="@dimen/text"
                    android:backgroundTint="@color/c_gray2"
                    android:drawableTint="@color/c_gray2" />

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="20.0dip"
                    android:background="@color/black"
                    android:fontFamily="@font/baloo"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Log In"
                    android:textColor="#ffffffff" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="20.0dip"
                    android:foregroundGravity="center|left"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvForgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:foregroundGravity="center"
                        android:gravity="center"

                        android:text="Forgot password ?"
                        android:textColor="@color/c_gray2" />


                </LinearLayout>


            </LinearLayout>


        </ScrollView>

        <Button
            android:id="@+id/btn_singUp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:background="@color/color_green"
            android:fontFamily="@font/baloo"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Create New Account"
            android:textColor="#ffffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="20dp"
            android:layout_margin="2dp"
            android:textSize="@dimen/text_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>