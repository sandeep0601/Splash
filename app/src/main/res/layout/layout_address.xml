<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:black="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorwhite">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            black:layout_constraintBottom_toBottomOf="parent"
            black:layout_constraintTop_toTopOf="parent"
            black:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    android:id="@+id/toolbar"
                    layout="@layout/layout_toolbar2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="15dp">




                </LinearLayout>

                <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                     android:backgroundTint="@color/colorwhite"
                    android:inputType="text"
                    android:drawableTint="@color/black"
                    android:fontFamily="@font/worksans_medium"
                    android:hint="Fullname"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_nev"
                    android:layout_marginTop="4dp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.1dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="25dp"
                    android:background="@color/c_gray1" />
                
                <EditText
                    android:id="@+id/edt_address1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                     android:backgroundTint="@color/colorwhite"
                    android:inputType="text"
                    android:drawableTint="@color/black"
                    android:fontFamily="@font/worksans_medium"
                    android:hint="Address Line 1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_nev"
                    android:layout_marginTop="4dp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.1dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="25dp"
                    android:background="@color/c_gray1" />

                <EditText
                    android:id="@+id/edt_address2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                     android:backgroundTint="@color/colorwhite"
                    android:inputType="text"
                    android:drawableTint="@color/black"
                    android:fontFamily="@font/worksans_medium"
                    android:hint="Address Line 2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_nev"
                    android:layout_marginTop="4dp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.1dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="25dp"
                    android:background="@color/c_gray1" />

                <EditText
                    android:id="@+id/edt_zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                     android:backgroundTint="@color/colorwhite"
                    android:inputType="text"
                    android:drawableTint="@color/black"
                    android:fontFamily="@font/worksans_medium"
                    android:hint="Zip Code"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_nev"
                    android:layout_marginTop="4dp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.1dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="25dp"
                    android:background="@color/c_gray1" />

                <EditText
                    android:id="@+id/edt_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                     android:backgroundTint="@color/colorwhite"
                    android:inputType="text"
                    android:drawableTint="@color/black"
                    android:fontFamily="@font/worksans_medium"
                    android:hint="City"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_nev"
                    android:layout_marginTop="4dp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.1dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="25dp"
                    android:background="@color/c_gray1" />

                <EditText
                    android:id="@+id/edt_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                     android:backgroundTint="@color/colorwhite"
                    android:inputType="text"
                    android:drawableTint="@color/black"
                    android:fontFamily="@font/worksans_medium"
                    android:hint="State"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_nev"
                    android:layout_marginTop="4dp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.1dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="25dp"
                    android:background="@color/c_gray1" />
                <EditText
                    android:id="@+id/edt_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                     android:backgroundTint="@color/colorwhite"
                    android:inputType="text"
                    android:drawableTint="@color/black"
                    android:fontFamily="@font/worksans_medium"
                    android:hint="Country"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_nev"
                    android:layout_marginTop="4dp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.1dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="25dp"
                    android:background="@color/c_gray1" />
                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                     android:backgroundTint="@color/colorwhite"
                    android:inputType="number"
                    android:drawableTint="@color/black"
                    android:fontFamily="@font/worksans_medium"
                    android:hint="Phone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_nev"
                    android:layout_marginTop="4dp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.1dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="25dp"
                    android:background="@color/c_gray1" />






                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="20.0dip"
                    android:background="@color/black"
                    android:fontFamily="@font/baloo"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Continue"
                    android:textColor="#ffffffff" />


            </LinearLayout>


        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>